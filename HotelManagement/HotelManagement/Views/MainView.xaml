<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelManagement.Views.MainView"
             Title="Welcome!"
             BackgroundColor="White">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

        <Image Source="logo.png" WidthRequest="200" HeightRequest="160" />

        <Label 
            Text="Welcome to Hotel Management" 
            FontSize="28" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            TextColor="#333"
        />

        <Label 
            Text="Manage your reservations with ease!"
            FontSize="18"
            HorizontalOptions="Center"
            TextColor="#666"
        />

        <Button 
            Text="Make a Reservation"
            x:Name="MakeReservationBtn"
            Clicked="MakeReservationBtn_Clicked"
            FontSize="20"
            FontAttributes="Bold"
            BackgroundColor="Blue"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="50"
        />

        <Button 
            Text="View Reservations"
            x:Name="ViewReservationsBtn"
            Clicked="ViewReservationsBtn_Clicked"
            FontSize="20"
            FontAttributes="Bold"
            BackgroundColor="Blue"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="50"
        />

    </VerticalStackLayout>
</ContentPage>